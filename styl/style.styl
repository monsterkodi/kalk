.titlebar
    height              titlebarHeight
    box-sizing          border-box
    font-size           13px
    padding-top         4px
    padding-left        70px
    padding-right       70px
    white-space         nowrap
    -webkit-app-region  drag
    position            static
    display             block

.titlebarDot
    position            relative
    bottom              1px

