#keys
    position            absolute
    bottom              10px
    left                5px

.button-row
    font-size           60px
    display             block
    overflow            visible
    height              90px

.button
    padding-top         20px
    font-size           35px
    width               80px
    height              60px
    text-align          center
    border-radius       10px
    margin              5px
    display             inline-block
    cursor              pointer
    &.wide
        width           172px
    &.tall
        height          150px
    
