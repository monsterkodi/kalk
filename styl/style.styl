#titlebar
    display             flex
    flex-direction      row
    height              titlebarHeight
    box-sizing          border-box
    font-size           titlebarFontSize
    white-space         nowrap
    pointer-events      auto
    cursor              pointer
    -webkit-app-region  no-drag

.titlebar-title
    flex                1 1 0
    display             flex
    flex-direction      row
    overflow-x          auto
    overflow-y          hidden
    padding-top         6px
    padding-left        10px
    -webkit-app-region  drag
    font-weight         bold
    
.titlebar-dot
    display             inline-block
    vertical-align      top
    padding-left        6px
    padding-right       9px
    margin-top          -1px

#titlebar .winicon img
    padding-left        6px
    padding-right       2px
    width               titlebarHeight
    height              titlebarHeight
    
#titlebar .winclose
    flex                0 0 45px
    float               right
    display             inline-block
    vertical-align      top
    padding-top         frameWidth
    
    & img
        padding-left    18px
        width           11px
        height          11px
        opacity         0.2

    &:hover
        & img
            opacity     1
    &:active
        background-color #f00
        & img
            opacity     1

