*
    outline-width       0
    
body
    fill-abs()
    margin              0
    overflow            hidden
    font-family         fontMono
    font-size           14px
    -webkit-user-select none
    -webkit-app-region  no-drag
    
#main
    overflow            hidden
    scroll              none
    
