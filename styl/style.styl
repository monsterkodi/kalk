frameWidth     = 6px
titlebarHeight = 22px
fontMono       = "Meslo LG S", "Liberation Mono", "Menlo", "Cousine", "Andale Mono", monospace

fill-abs()
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0

