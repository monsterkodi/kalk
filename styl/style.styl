.line-div
    padding                 frameWidth
    padding-left            2 * frameWidth
    position                relative
                
span.line-span
    -webkit-app-region      no-drag
    white-space             nowrap
    margin-top              7px

img.appicon
    vertical-align          top
    width                   48px
    height                  48px

pre
    font-family             fontMono
    display                 inline-block
    margin                  0
    margin-left             7px
    margin-top              2px
    overflow                hidden
    padding                 13px
    cursor                  pointer
    border-radius           6px

.current 
    border-top-right-radius 6px
    border-bottom-right-radius 6px
            
