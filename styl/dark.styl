frameWidth  = 6px
frameColor  = #222
frameBorder = frameWidth solid frameColor

body
    background          #222
    color               #fff

.titlebar
    background          #333
    color               #aaa

.titlebar-dot
    color               #444

.titlebar-version
    color               #555

#main
    border-left         frameBorder
    border-right        frameBorder
    border-bottom       frameBorder
    background          #181818
    color               #aaa

pre
    background          #000

// 000  000   000  00000000   000   000  000000000  
