.input-text 
    color               #fff
    border              1px solid #222
    border-radius       10px
    
span
    border              none
    white-space         pre
    &.digit
        color           #88f
    &.function
        color           #f80
    &.constant
    &.op0
        color           #ff0
    &.op1
        color           #afa
    &.op2
        color           #484
    &.bracket
    &.equals
        color           #444
    &.exponent
    &.dot
    &.complex
        color           #44a
    
