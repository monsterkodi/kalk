frameWidth  = 6px
frameColor  = #222
frameBorder = frameWidth solid frameColor

body
    background          #222
    color               #fff

.titlebar
    background          #333
    color               #aaa

.titlebarDot
    color               #444

.titlebarVersion
    color               #555

#main
    border-left         frameBorder
    border-right        frameBorder
    border-bottom       frameBorder
    
.main
    background          #181818
    color               #aaa

pre
    background          #000

