.popup
    background-color    #222

.popupItem
    color               #888
    &:not(:last-child)
        border-bottom       1px solid #222
    &.selected
        color           #fff
        & .popupCombo
            color       #888

.menuItem:active
.popupItem:active
    color               #ff0

.popupCombo
    color               #333
    
.popupItem.separator
    border-top          1px solid #333

