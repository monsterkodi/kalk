descience = str -> # convert scientific/exponential notation
    
    if 'e+' in str
        str = BigInt(Number.parseFloat(str)).toString()
    else if 'e-' in str
        em = parseInt str.split('e-')[1]
        str = Number.parseFloat(str).toFixed(em+2)
        str = noTrailingZeros str
    str

