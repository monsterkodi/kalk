noTrailingZeros = str ->
    
        while str[-1] == '0' âœ str = str[0...-1]
        if    str[-1] == '.' âœ str = str[0...-1]
        str

precise = str precision ->
    
    â® '0' if Math.abs(str) < precise
    val = parseFloat str
    if val < 1 
        # log 'precise' val, precision, val.toFixed precision
        str = val.toFixed precision
