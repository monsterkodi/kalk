#titlebar //.menu
    animation           14s ease scaleIn

.menu
    height              titlebarHeight
    flex                0 1 0
    display             flex
    flex-direction      row
    
.menuItem
    cursor              pointer
    padding-left        12px
    padding-right       0px
    padding-top         6px
    display             inline-block
    height              titlebarHeight
    overflow            visible
            
