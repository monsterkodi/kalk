#main
    overflow            auto
    pointer-events      auto
    position            absolute
    top                 titlebarHeight
    left                0
    right               0
    bottom              0                
    padding             0
    margin              0

#content
    position            absolute
    top                 0
    bottom              0
    left                0
    right               0
