frameWidth          = 6px
titlebarHeight      = 30px

@font-face 
    font-family     titlebarFont
    font-weight     normal
    font-style      normal
    src             url("../../Contents/Resources/font/Bahnschrift.woff")

@font-face 
    font-family     fontMono
    font-weight     normal
    font-style      normal
    src             url("../../Contents/Resources/font/MesloLGS-NF-Regular.woff2")

*
    outline-width       0
    outline-style       none
    
fill-abs()
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0
    margin              0
    padding             0
        
