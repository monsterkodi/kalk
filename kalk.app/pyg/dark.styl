bodyColor           = #000000
bgColor             = #000000
separatorColor      = #0e0e0e
frameColor          = #131313
scrollHoverColor    = #b00
titleRedColor       = #f00
bodyBorderColor     = #1a1a1a
titleColor          = #222
scrollColor         = #333
textBlurColor       = #444
textActiveColor     = #999
textFocusColor      = #fff

winbuttonBlurColor   = frameColor
winbuttonFocusColor  = textBlurColor
winbuttonHoverColor  = textActiveColor
winbuttonActiveColor = textFocusColor

frameWidth          = 6px
frameRadius         = 10px
contentRadius       = frameRadius - 2px
frameBorder         = frameWidth solid frameColor

fadeInAnim()          
    animation           300ms ease-in-out fadeIn
fadeOutAnim()         
    animation           300ms ease-in-out fadeOut

