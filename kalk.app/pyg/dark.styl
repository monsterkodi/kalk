#main
    border-left         frameBorder
    border-right        frameBorder
    border-bottom       frameBorder
    border-bottom-left-radius  contentRadius
    border-bottom-right-radius contentRadius
    background-color    bgColor
    color               textFocusColor
    font-size           40px

