#titlebar
    background                  frameColor
    border-top-left-radius      contentRadius
    border-top-right-radius     contentRadius
    overflow hidden

.titlebar-name
    color               textActiveColor

.titlebar-dot
    color               titleColor

#titlebar .noicon
    color    textBlurColor
    background-color    frameColor
    border-radius       4px
    border              1px solid winbuttonFocusColor
    
#titlebar.focus .noicon
    fadeInAnim()
    
#titlebar.blur .noicon
    fadeOutAnim()
    border              1px solid frameColor
    background-color    frameColor
    
#titlebar .winbutton
    &:active
        background-color titleRedColor
        &.gray
            background-color titleColor
            
#titlebar .winbutton svg
    stroke-width        2px
    stroke              winbuttonBlurColor

#titlebar.focus .winbutton svg
    fadeInAnim()
    stroke              winbuttonFocusColor

#titlebar.blur .winbutton svg
    fadeOutAnim()
    stroke              winbuttonBlurColor
    
#titlebar .winbutton:hover svg    
    stroke              winbuttonHoverColor
        
#titlebar .winbutton:active svg    
    stroke              winbuttonActiveColor

