.menuItem
    color               textBlurColor
    background-color    frameColor
    
.menuItem.selected
    color               textActiveColor
    
.menu:focus .menuItem.selected
    color               textFocusColor
    
#titlebar.focus .menu
    fadeInAnim()
    opacity             1

#titlebar.blur .menu
    fadeOutAnim()
    opacity             0
    
