input-transition()
    -webkit-transition  all 0.4s ease-in-out
ghost-transition()
    -webkit-transition  all 0.8s ease-in-out    
fast-transition()
    -webkit-transition  all 0.2s ease-in-out
bubble-transition()
    -webkit-transition  all 0.5s ease-in-out    
no-transition()
    -webkit-transition  none
    
center-xy()
    position            absolute
    left                50%
    top                 50%
    transform           translate(-50%, -50%)
    
@font-face
    font-family            FontAwesomeSolid
    font-weight            normal
    font-style             normal
    src                    url("../../../Contents/Resources/font/fa-solid-900.woff2")

@font-face
    font-family            FontAwesomeRegular
    font-weight            normal
    font-style             normal
    src                    url("../../../Contents/Resources/font/fa-regular-400.woff2")
    
body
    margin              0px
    height              100%
    overflow            hidden
    -webkit-user-select none

input 
textarea
    outline             none
    
#password
#turtle
.button
.vault-item
.vault-arrow
.stash-item
.pref-item
    cursor              pointer

a
    text-decoration     none

.no-pointer
    pointer-events      none

.main-input
    input-transition()
    border-radius       2px
    font-size           24px
    padding-left        6px
    padding-right       6px
    width               100%
    box-sizing          border-box
    text-align          center
    height              35px
    
#site
#pattern
    padding-top         0px
    padding-bottom      3px
        
.ghost
    ghost-transition()
    pointer-events  none
    position        absolute
    left            0
    right           0
    text-align      left
    font-size       24px
    top             12px
    padding-left    20px

.timeout-box
    pointer-events  none
    position        absolute
    top             23px
    left            20px
    right           20px
    
.timeout
    -webkit-transition all 0.3s linear
    pointer-events  none
    border-radius   2px
    height          9px
    position        absolute
        
#lock
#password-ghost
    fast-transition()
    
.lock    
#lock
    font-family     FontAwesomeSolid
    top             14px
    opacity         0    
    &.closed
    &.open
        opacity     1
        
#prefslist
    font-size       18px
    
#pref 
    transform       translateY(-2px)
        
.bool
    & span
        padding     4px
        margin      -4px
        display     inline-block
        transform   translateY(-4pxqw)
    font-family     fontMono
    font-size       22px
    opacity         0    
    &.bool-true
    &.bool-false
        opacity     1
        opacity     1
    
