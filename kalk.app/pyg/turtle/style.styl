scrollWidth = 6px

::-webkit-scrollbar
    width                   scrollWidth
::-webkit-scrollbar
    height                  scrollWidth  
    background-color        transparent
::-webkit-scrollbar-track
    background-color        transparent
    
#settings
    position  absolute
    left      0
    right     0
    
.list
    display         flex
    flex-direction  column
    position        absolute
    left            12px
    right           12px
    top             12px
    bottom          2px
    border-radius   8px

.scroll
    width           100%
    flex            1 1 0
    overflow-x      hidden
    overflow-y      auto
    border-top-left-radius  8px
    border-top-right-radius 8px
    
.buttons
    flex           0 0 50px
    display        flex
    font-family     fontMono
    font-size       26px
    
.buttons span
    flex           1 1 0
    text-align     center
    position       relative

.button-border
    center-xy()

.button
    center-xy()
    input-transition()
    box-sizing        border-box
    border-radius     2px

#floppy
    font-family     fontMono
    font-size       24px
    text-align      right
    padding-right   20px

.vault-item-border
    no-transition()
    box-sizing      border-box
    padding         5px
    position        relative
    pointer-events  all

.vault-arrow
    font-size       30px
    position        absolute
    font-family     fontMono
    left            15px
    top             1px

.vault-item
    font-size       18px
    pointer-events  all
    text-align      left
    width           100%
    height          34px
    padding-left    41px
    
.vault-value
    box-sizing      border-box
    position        relative
    pointer-events  all
    // left            50px
    // width           296px
    // max-width       296px
    width           100%
    min-height      10px
    text-align      left
    padding-left    8px
    padding-right   8px
    padding-top     4px
    padding-bottom  8px
    font-size       14px
    resize          none 
    overflow-x      auto 
    overflow-y      hidden

.vault-overlay 
    box-sizing      border-box
    font-size       18px
    pointer-events  all
    position        absolute
    left            32px
    width           296px
    top             0px
    bottom          0px
    margin          5px
    text-align      left
    padding-left    8px
    padding-right   8px
    padding-top     0px
    padding-bottom  1px


.stash-item-border
    no-transition()
    padding   5px
    & .site
    & .lock    
    & .pattern
        position        absolute
        pointer-events  none
        top             7px
    & .site
        left       10px
    & .lock
        left       0
        right      0
        text-align  center
    & .pattern
        left       60%

.pref-item-border
    no-transition()
    padding   5px
    & .int
        position        absolute
        pointer-events  none
        top             13px
    & .shortcut
    & .bool
    & .pref    
        position        absolute
        pointer-events  none
        top             11px
    & .pref        
        top        13px
        left       20px
    & .int
    & .shortcut
    & .bool
        right      20px

.pref-item
    width          100%
    height         32px
    
.pref-overlay.shortcut
.pref-overlay.int
.pref-overlay 
    box-sizing      border-box
    pointer-events  all
    position        absolute
    right           0
    top             0
    bottom          0
    width           40%
    margin          6px
    padding-top     4px

.pref-overlay.shortcut
    cursor          cell    
    font-size       10px        

.pref-overlay.int
    cursor          text    
    text-align      right
    font-size       17px        
    
.stash-item
    width           100%
    height          24px
                
