        background-color  clr.gray-very-dark
        border            1px solid clr.gray-most-dark

#master
    color           clr.gray-dark
    &:focus
        box-shadow  0 0 10px clr.yellow
        color       clr.orange
        
clr.site        = clr.green-dark       
clr.site-medium = clr.green 
clr.site-bright = clr.green-bright 
#site
    color                    clr.site
    &:focus
        box-shadow  0 0 10px clr.site-bright
        color                clr.site-medium
                
clr.pattern        = clr.gray
clr.pattern-medium = clr.white
clr.pattern-bright = clr.white
#pattern
    color                    clr.pattern 
    &:focus
        box-shadow  0 0 10px clr.pattern-bright
        color                clr.pattern-medium

clr.password        = clr.blue-medium
clr.password-medium = clr.blue-very-bright
clr.password-bright = clr.blue-very-bright
#password
    color                    clr.password
    &:focus
        box-shadow  0 0 10px clr.password-bright
        color                clr.password-medium
    
.ghost
    font-weight     bold
    color           rgba(255, 255, 255, 0.1)

.timeout
    background      rgba(255, 255, 255, 0.05)
    
