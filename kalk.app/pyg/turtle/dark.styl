.button

    width                   50px
    height                  40px
    padding-top             6px
    filter                  drop-shadow(0 0 2px rgba(0, 0, 0, 0.4))
    color                   #444
    &.current
        filter              drop-shadow(0 0 3px rgba(200,200,200,0.2))
        color               #aaa
    &:hover
        filter              drop-shadow(0 0 4px #fff)
        color               #fff
    &:active
        filter              drop-shadow(0 0 4px rgba(255,255,0,0.5))
        color               #ff0
        
#help
    &:hover
        filter              drop-shadow(0 0 4px rgba(100,100,255,0.5))
        color               #88f
    &:active
        filter              drop-shadow(0 0 6px #888)
        color               #fff
        
#prefs
    &:focus
        // box-shadow  0 0 10px clr.pattern-bright
        color                clr.pattern-medium

