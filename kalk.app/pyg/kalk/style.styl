#input
    flex                0 0 100px
    margin-top          -6px
    padding-top         6px
    padding-bottom      0
    padding-left        6px
    padding-right       6px
    
.input-frame
    
    position            relative
    height              100px
    min-height          100px
    border-radius       10px

.input-text

    center-y()
    left                12px
    right               12px

    font-size           80px
    -webkit-user-select auto
    white-space         pre
    pointer-events      all
    text-align          right
    
    & span
        background      transparent !important
        vertical-align  middle
        
.input-text span:last-child
        padding-right        14px
            
