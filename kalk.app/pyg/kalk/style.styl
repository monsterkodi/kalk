#main
    display             flex
    flex-direction      column
    overflow            hidden

#sheet
    flex                1 1 0
    overflow            auto
    display             none
    flex-direction      row
    padding             0
    margin-left         6px
    margin-right        6px
    margin-bottom       8px
    
    border-top-left-radius      12px
    border-top-right-radius     12px
    border-bottom-left-radius   12px
    border-bottom-right-radius  12px

#keys
    border-bottom-left-radius   12px
    border-bottom-right-radius  12px

.sheet-calc 
    flex                1 1 0  
    padding             6px
    height              auto
    width               auto
    // border              1px solid green

.sheet-result
    width               auto
    height              auto
    flex                1 1 0               
    padding             6px
    // border              1px solid red
    
.sheet-line
    white-space         nowrap
    height              26px
    text-align          right
    font-size           16px
    -webkit-user-select auto
    padding-right       10px
    display             block
    margin-left         auto
    overflow            hidden
    &.result
        text-align      left
    
