.key
span
    &.function
    &.complex
        font-style      italic
    
#keys
    flex                0 0

.key-row
    font-size           60px

.key
    overflow            hidden
    font-size           35px
    height              76px
    text-align          center
    border-radius       10px
    &:not(.inactive)
        cursor          pointer
    -webkit-user-select none
    &.right
        text-align   right
        padding-right 31px
    
.key.oneoverx
.key.function
    font-size           32px

.key.oneoverx
    letter-spacing      -0.2rem
    
.key.function .key-wrap
    padding-right        6px
    margin-right        -6px
    
.key.rad2deg .key-wrap
    font-size           64px
    padding-bottom      24px
    
.key.multiply .key-wrap
    padding-top         8px
    
.key.hex.op1
    font-size           48px
    & .key-wrap
        padding-bottom  8px
    
.key.function.atan
    font-size           28px
    & .key-wrap
        padding-left    3px
   
.key-table
    margin-top          -7px
    
.spacing-cell
    padding             0
    
.key
    position            relative
    
.key-wrap
    position            absolute
    center-xy()
    pointer-events      none

.key.clear .key-wrap
    top                 18px
    transform           translate(-50%, 0%)

.key.bottom .key-wrap
    transform           translate(-50%, 45%)
    
    