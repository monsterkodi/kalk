frameWidth          = 6px
titlebarHeight      = 30px
titlebarFontSize    = 15px

center-y()
    position            absolute
    top                 50%
    transform           translate(0%, -50%)

center-x()
    position            absolute
    left                50%
    transform           translate(-50%, 0%)

center-xy()
    position            absolute
    left                50%
    top                 50%
    transform           translate(-50%, -50%)
    
